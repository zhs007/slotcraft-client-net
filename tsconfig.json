{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Output Options */
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Module Resolution */
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
